= semantic_form_for @toronto_library do |f|
  -if @toronto_library.errors.any?
    #error_explanation
      %h2= "#{pluralize(@toronto_library.errors.count, "error")} prohibited this toronto_library from being saved:"
      %ul
        - @toronto_library.errors.full_messages.each do |msg|
          %li= msg
  = f.inputs do
    = f.input :name, :autofocus => true
    = f.input :card
    = f.input :pin
  .actions
    = f.submit 'Save', :class => 'btn'
    = link_to 'Back', toronto_libraries_path
