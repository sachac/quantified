!!!
%html
  %head
    %title quantified awesome
    = stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/ui-lightness/jquery-ui.css"
    = stylesheet_link_tag "formtastic"
    = stylesheet_link_tag 'compass_bootstrap.css', :media => 'screen, projection'
    = stylesheet_link_tag 'application'              
    - conditional_html
    = javascript_include_tag :defaults
    = javascript_include_tag "autocomplete-rails.js"
    = javascript_include_tag "raphael-min.js"
    = javascript_include_tag "jquery.sparkline.min.js"
    = csrf_meta_tag
  %body
    .topbar
      .fill
        .container
          - if current_account
            = link_to "quantified awesome: #{current_account.username}", root_path, :class => 'brand'
          - else
            = link_to "quantified awesome", root_path, :class => 'brand'
          %ul.nav
            %li= link_to 'dashboard', root_path
            %li= link_to 'stuff', stuff_index_path
            %li= link_to 'contexts', contexts_path
            %li= link_to 'clothing', clothing_index_path
            %li= link_to 'library', library_items_path
            -#%li= link_to 'memories', memories_path
            %li= link_to 'time', time_path
            - if user_signed_in?
              %li= link_to t("web-app-theme.logout", :default => "log out"), destroy_user_session_path, :method => "delete"
            - else
              %li
                %strong= link_to 'log in', new_user_session_path
    .container
      .content
        .flash
          - flash.each do |type, message|
            %div{:class => "alert-message #{type}"}
              %p= message
        = yield
      %footer
        .block
          %p
            Copyright &copy; #{Time.now.year} Sacha Chua
            - if session
              - if session['layout'] == 'mobile'
                = link_to 'Full', :layout => 'full'
              - else 
                = link_to 'Mobile', :layout => 'mobile'
