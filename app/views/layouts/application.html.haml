!!!
%html
  %head
    %title Sacha Chua
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/warehouse/style", "web-app-theme/override", "application", :cache => true
    = javascript_include_tag :defaults, :cache => true
    = csrf_meta_tag
    = javascript_include_tag "autocomplete-rails.js"
    = javascript_include_tag "raphael-min.js"
    = javascript_include_tag "jquery.sparkline.min.js"
    :javascript
      $(function() { $('.sparkline-bar').sparkline('html', {type: 'bar'}); });
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Sacha Chua
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
            %li
              = link_to t("web-app-theme.logout", :default => "Logout"), destroy_user_session_path, :method => "delete"
        #main-navigation
          %ul.wat-cf
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Sacha Chua
        #sidebar
          - if content_for?(:sidebar)
            = content_for(:sidebar)
          - else
            = render :partial => "partials/sidebar"

