= semantic_form_for @tap_log_record, html: {class: 'form-horizontal'} do |f|
  = f.inputs do
    = f.input :status
    = f.input :catOne
    = f.input :catTwo
    = f.input :catThree
    = f.input :number
    = f.input :rating
    = f.input :note
    = f.input :timestamp
  .control-group
    .controls
      = submit_tag I18n.t('app.general.submit'), :class => 'btn btn-primary'
