%h2 Need to reset your password?
= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :login
    .clear-fix
      %label
        Or log in with...
      .input  
        = link_to image_tag('google_32.png', :size => "32x32", :alt => "Google"), oauth_url(:google, :subdomain => false), :class => 'service'
        = link_to image_tag('facebook_32.png', :size => "32x32", :alt => "Facebook"), oauth_url(:facebook, :subdomain => false), :class => 'service'

  .actions
    = f.submit "Send me reset password instructions", :class => 'btn primary'
= render :partial => "devise/shared/links"
