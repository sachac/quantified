= form_tag class: 'form-inline' do 
  Start:
  = text_field_tag :start, @start.strftime("%Y-%m-%d"), :class => 'datepicker'
  End:
  = text_field_tag :end, @end.strftime("%Y-%m-%d"), :class => 'datepicker'
  = submit_tag "Go", class: 'btn'

%div{:style=>"font-size: 20px"}
%table.table
  - @cat.sort.each do |label|
    - list = @time_graphs[label]     
    %tr
      %td= label
      %td
        %span{:class=>"sparkline-bar"}
          = list.join(',')
- days = [['Sat', 6], ['Sun', 0], ['Mon', 1], ['Tue', 2], ['Wed', 3], ['Thu', 4], ['Fri', 5]]
- sums = ['Sleep', 'Work', 'Discretionary', 'Unpaid work', 'Personal care']
%table.table-bordered
  %tr
    %th Activity
    - days.each do |x|
      %th= x[0]
    %th Total
    %th Average
    %th Weekday average
    %th Weekend average
  - sums.each do |cat|
    %tr
      %th= cat
      - days.each do |x|
        %td.right= '%.1f' % (@by_day[cat][x[1]] || 0)
      %td.right= '%.1f' % @by_day[cat].values.sum
      %td.right= '%.1f' % (@by_day[cat].values.sum / @count_days.values.sum) if @count_days.values.sum > 0
      %td
        - total = 0
        - count = 0
        - 1.upto(5) do |i| total += (@by_day[cat][i] || 0); count += (@count_days[i] || 0) end
        = '%.1f' % (total / count) if count > 0
      %td= '%.1f' % begin [@by_day[cat][0] || 0, @by_day[cat][6] || 0].sum / ((@count_days[0] || 0) + (@count_days[6] || 0)) rescue 0 end

  %tr
    %th Count
    - days.each do |x|
      %td.right= @count_days[x[1]]
    %td
    %td
    %td.right= pluralize 1.upto(5).map { |i| @count_days[i] || 0 }.sum, 'weekday'
    %td.right= pluralize (@count_days[0] || 0) + (@count_days[6] || 0), 'weekend day'
