#block-text.block
  .content
    %h2.title
      = l Date.today, :format => :long
      \- 
      = pluralize number_with_delimiter(@memento_mori[:years]), 'year'
      or
      = pluralize number_with_delimiter(@memento_mori[:months]), 'month'
      or
      = pluralize number_with_delimiter(@memento_mori[:weeks]), 'weeks'
      - if current_user and @memento_mori then
        left - make the most of them!
      - else
        left - working on making the most of them!
    .inner
      %table
        %tr
          %td
            %h3 Toronto weather
            %a{:href => "http://www.wunderground.com/cgi-bin/findweather/getForecast?query=zmw:00000.1.71265&bannertypeclick=wu_clean2day"}
              %img{:src => "http://weathersticker.wunderground.com/weathersticker/cgi-bin/banner/ban/wxBanner?bannertype=wu_clean2day_metric_cond&airportcode=CYTZ&ForcedCity=Toronto&ForcedState=ON&wmo=71265&language=EN", :alt => "Click for Toronto, Ontario Forecast", :height => "100", :width => "300"}
          %td
            %h3 Manila weather
            %a{:href => "http://www.wunderground.com/cgi-bin/findweather/getForecast?query=zmw:00000.1.71265&bannertypeclick=wu_clean2day"}
              %img{:src => "http://weathersticker.wunderground.com/weathersticker/cgi-bin/banner/ban/wxBanner?bannertype=wu_clean2day_metric_cond&airportcode=RPLL&ForcedCity=Manila&ForcedState=&wmo=98429&language=EN", :alt => "Click for Forecast", :height => "100", :width => "300"}
      .summary
        .clothing.category
          = render :partial => 'clothing_logs/by_date', :locals => { :dates => @dates, :by_date => @by_date, :size => :tiny }
        .library.category
          = link_to "#{LibraryItem.current_items.where('status!="read"').count} of #{pluralize(LibraryItem.current_items.count, "library item")} to read,", current_library_items_path
          = "#{pluralize TorontoLibrary.pickup_count, "item"} to pick up"
          = " - first due: #{LibraryItem.current_items.minimum('due').strftime('%a %b %e')}"
          = link_to "(refresh)", library_refresh_path
        .food.category
          - remaining = (CsaFood.remaining / 1000.0)
          - days = CsaFood.next_delivery - Date.today
          = link_to "#{'%0.1f' % remaining}kg of CSA food to go,", csa_foods_path
          = "#{pluralize days, "day"} until next delivery = "
          = "#{'%0.1f' % (remaining * 1.0 / days)}kg per day"
        .stuff.category
          - if Stuff.out_of_place.count > 0
            = link_to "#{pluralize Stuff.out_of_place.count, "item"} out of place", stuff_index_path
            .list
              = Stuff.out_of_place.map{ |stuff| return_stuff_info stuff }.join(', ').html_safe
          - else
            .green= link_to "A place for everything, and everything in its place", stuff_index_path
        .clear-both
          
          