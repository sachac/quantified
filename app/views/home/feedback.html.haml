= form_tag feedback_path, class: 'form-horizontal' do
  .control-group
    = label_tag :email, "E-mail", class: 'control-label'
    .controls
      = text_field_tag :email, @email
  .control-group
    = label_tag :message, "Message", class: 'control-label'
    .controls
      = text_area_tag :message, nil, :rows => 10, :cols => 40, :required => true
  - if params[:destination]    
    .control-group
      = label_tag :context, "From page:", class: 'control-label'
      .controls
        .uneditable-input= params[:destination]
  = hidden_field_tag :old_params, params[:old_params]
  = hidden_field_tag :destination, params[:destination]
  
  .control-group
    .controls= submit_tag "Send feedback", :class => 'btn btn-primary' 
  
