= semantic_form_for @clothing do |f|
  -if @clothing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clothing.errors.count, "error")} prohibited this clothing from being saved:"
      %ul
        - @clothing.errors.full_messages.each do |msg|
          %li= msg
  = f.inputs do
    = f.input :name
    %li
      Tags
      = f.text_field :tag_list
    = f.input :clothing_type
    = f.input :colour
    = f.input :status
    = f.input :notes, :as => :text
    = f.input :cost
  .actions
    = f.submit 'Save'
= set_focus_to_id("clothing_label")
