= form_for @context do |f|
  -if @context.errors.any?
    #error_explanation
      %h2= "#{pluralize(@context.errors.count, "error")} prohibited this context from being saved:"
      %ul
        - @context.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :rules
    = f.text_area :rules
  .actions
    = f.submit 'Save'
